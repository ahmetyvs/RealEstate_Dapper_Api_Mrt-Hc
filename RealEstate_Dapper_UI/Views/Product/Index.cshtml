@model IEnumerable<ResultProductDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/bootstrap-4.min.css" rel="stylesheet" />
<link href="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/sweetalert2.min.js"></script>

@if (TempData["ekle"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Ekleme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}

@if (TempData["guncelle"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Güncelleme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}

@if (TempData["sil"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Silme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">İlan Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">İlan Başlığı</th>
                                <th scope="col">Şehir</th>
                                <th scope="col">İlçe</th>
                                <th scope="col">Kategori</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Tür</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sitede Gör</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.productID</th>
                                    <td>@item.title</td>
                                    <td>@item.city</td>
                                    <td>@item.district</td>
                                    <td>@item.categoryName</td>
                                    <td>@item.price</td>
                                    <td>@item.type</td>
                                    <td><a href="/Product/DeleteProduct/@item.productID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Product/UpdateProduct/@item.productID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Product/ProductDetail/@item.productID" class="btn btn-outline-primary">Sitede Gör</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Yeni İlan Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>