
@model IEnumerable<ResultCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/bootstrap-4.min.css" rel="stylesheet" />
<link href="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/dashmin-1.0.0/GerekliDosyalar/Sweetalert2/sweetalert2.min.js"></script>

@if (TempData["ekle"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Ekleme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}

@if (TempData["guncelle"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Güncelleme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}

@if (TempData["sil"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Silme işlemi başarılı',
            showConfirmButton: false,
            timer: 1500,
            width: '400px'
        })
    </script>
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Kategori Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    @if (@item.CategoryStatus)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }
                                    
                                    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory/" class="btn btn-outline-info">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>